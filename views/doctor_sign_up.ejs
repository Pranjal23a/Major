<link rel="stylesheet" type="text/css" href="/css/admin_signup.css">
<div class="main-container">
    <div class="title-edit">
        <h1>Doctor Sign-Up</h1>
    </div>
    <div class="form-container">
        <form action="/admin/doctor/create" method="POST">
            <div class="form-style">
                <input class="form-style-place" type="email" name="email" placeholder="Email" required>
                <input class="form-style-place" type="text" name="name" placeholder="Name" required>
                <input class="form-style-place" type="password" name="password" placeholder="Password" required>
                <input class="form-style-place" type="password" name="confirm_password" placeholder="Confirm Password"
                    required>
                <input class="enter" type="submit" value="Sign-Up">
            </div>
        </form>
    </div>
</div>