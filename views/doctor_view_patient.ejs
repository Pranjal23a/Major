<link rel="stylesheet" type="text/css" href="/css/book_appointment.css">
<div class="main-container">
    <div>
        <nav class="navbar navbar-expand-lg navbar-light bg-light">
            <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarTogglerDemo01"
                aria-controls="navbarTogglerDemo01" aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="collapse navbar-collapse" id="navbarTogglerDemo01">
                <ul class="navbar-nav mr-auto mt-2 mt-lg-0">
                    <li class="nav-item ">

                        <a class="nav-link " href="/doctor/patient-diagnosis">Patient Diagnos <span
                                class="sr-only">(current)</span></a>

                    </li>
                    <li class="nav-item active">

                        <a class="nav-link " href="/doctor/patient-details">Patient Details <span
                                class="sr-only">(current)</span></a>

                    </li>
                </ul>
            </div>
        </nav>
        <div class="title-edit">
            <h1>Appointment Details</h1>
        </div>
        <div id="doctor-details">
            <table border="1" style="text-align: center;">
                <thead>
                    <th>Sno.</th>
                    <th>Patient Name</th>
                    <th>Email</th>
                    <th>Mobile Number</th>
                    <th>Address </th>
                    <th>Timings</th>
                    <th></th>
                </thead>
                <tbody>

                    <%if(user){ let i=1 %>
                        <% for(info of user.patients){ %>
                            <tr>
                                <% if(info.check) {%>
                                    <td>
                                        <%= i %>
                                    </td>
                                    <td>
                                        <%= info.name %>
                                    </td>
                                    <td>
                                        <%= info.email%>
                                    </td>
                                    <td>
                                        <%= info.mobile %>
                                    </td>
                                    <td>
                                        <%= info.address %>
                                    </td>
                                    <td>
                                        <%= info.timing + " " + info.am_pm %>
                                    </td>
                                    <td><a href="/appointment/destroy-patient/<%= info.id %>"><img
                                                src="/images/delete.png"></a>
                                    </td>
                                    <% } else{%>
                                        <td>
                                            <%=i%>
                                        </td>
                                        <td> - </td>
                                        <td> - </td>
                                        <td> - </td>
                                        <td> - </td>
                                        <td>
                                            <%= info.timing + " " +info.am_pm %>
                                        </td>
                                        <td></td>
                                        <% } %>
                            </tr>
                            <% i++;} %>
                                <% } %>
                </tbody>
            </table>

        </div>
    </div>